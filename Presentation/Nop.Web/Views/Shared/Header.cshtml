<script type="text/javascript">
    $(document).ready(function () {
        $('#small-searchterms').keypress(function (e) {
            var key = e.which;
            if (key == 13)  // the enter key code
            {
                $("#searchbutton").click();
            }
        });
        $("#searchbutton").on("click", function myfunction() {
            if ($("#small-searchterms").val() == "") {
                alert('Please enter some search keyword');
                $("#small-searchterms").focus();
                return;
            }
            window.location = "/search?q=" + $("#small-searchterms").val();
        });

        // mobile search
        $('#mobile-small-searchterms').keypress(function (e) {
            var key = e.which;
            if (key == 13)  // the enter key code
            {
                $("#mobile-searchbutton").click();
            }
        });
        $("#mobile-searchbutton").on("click", function myfunction() {
            if ($("#mobile-small-searchterms").val() == "") {
                alert('Please enter some search keyword');
                $("#mobile-small-searchterms").focus();
                return;
            }
            window.location = "/search?q=" + $("#mobile-small-searchterms").val();
        });


    });

</script>
<div class="header-wrap section section-full-width">
    <div class="content-inner-width header-inner-wrap">
        <div class="header-inner">
            <div id="logo" class="logo-wrap">
                <div id="logo" class="logo-wrap">
                    <a href="/">
                        <img class="header-logo-img" src="~/Content/DezineCorpImages/dezinecorp_logo.svg" alt="Dezine Corp Logo" />
                    </a>
                </div>
                <!-- /.logo-wrap -->

            </div>
            <p class="logo-tagline"><i class="fab fa-canadian-maple-leaf"></i> 100% Canadian family owned and operated</p>

            <div class="nav-upper">
                <ul class="nav-upper-list">
                    <li class="nav-main-item"><img class="currency-flag" src="~/Content/DezineCorpImages/ca_flag.svg"><span class="fake-menu"> | $CAD</span></li>
                    <li class="nav-main-item nav-login"><a href="/login">Login <i class="fas fa-key" aria-hidden="true"></i></a></li>
                    <li class="nav-main-item nav-search-wrapper">
                        <input type="text" class="clear-default-input inline-text-input corner-radius nav-search-input" placeholder="Search" id="small-searchterms" name="q" autocomplete="off">
                        <a class="bt-g nav-search-button" id="searchbutton">
                            <i class="fas fa-search" aria-hidden="true"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- /header-left -->
        </div>
    </div>
    <div class="main-nav-bar">
